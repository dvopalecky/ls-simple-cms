<h2>Documents</h2>
<ul>
  <% @files.each do |file| %>
    <li>
      <a href="/<%= file %>"><%= file %></a>
      (<a href="/<%= file %>/edit">Edit</a>)
      (<a href="/<%= file %>/duplicate">Duplicate</a>)
      <form action="/<%= file %>/delete" method="post" class="inline">
        <button type="submit" name="delete">Delete</button>
      </form>
    </li>
  <% end %>
</ul>
<p><a href="/new">New document</a></p>

<h2>Images</h2>
<ul>
  <% @images.each do |image| %>
    <li>
      <a href="/images/<%= image %>"><%= image %></a>
    </li>
  <% end %>
</ul>
<p><a href="/upload_image">Upload image</a></p>
<h2>User info</h2>
<p>
  <% if session[:signed_in_user] %>
    <form action="/users/signout" method="post" class="inline">
      <em>Signed in as <%= session[:signed_in_user] %></em>
      <button type="submit" name="signout">Sign out</button>
    </form>
  <% else %>
    <p>
      You're signed off.
      <a href="/users/signin"><button>Sign in</button></a>
    </p>
  <% end %>
</p>
